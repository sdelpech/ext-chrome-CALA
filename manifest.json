{
  "manifest_version": 3,
  "name": "DJ Coq à l'âne",
  "version": "1.0",
  "description": "Extension pour ajuster le volume des onglets Chrome.",
  "permissions": [
    "tabs",
    "scripting",
    "system.display"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["splitview.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
